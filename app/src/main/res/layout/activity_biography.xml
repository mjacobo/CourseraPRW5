<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_biography"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mj.courseraprw3.Biography">

    <include android:id="@+id/myActionBarBio" layout="@layout/action_bar_list"></include>

    <android.support.v7.widget.AppCompatTextView
        android:id ="@+id/actvBio"
        android:layout_marginTop="@dimen/label_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Bio_label"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/contact_label_size"
        />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/civBioPhoto"
        android:layout_width="@dimen/photo_size"
        android:layout_height="@dimen/photo_size"
        android:layout_gravity="center"
        android:src="@drawable/photograph"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="@dimen/border_width"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="@color/colorPrimaryDark"/>

    <android.support.v7.widget.AppCompatTextView
        android:id ="@+id/actvBioDesc"
        android:layout_marginTop="@dimen/label_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:paddingLeft="@dimen/text_padding"
        android:paddingRight="@dimen/text_padding"
        android:paddingStart="@dimen/text_padding"
        android:paddingEnd="@dimen/text_label_size"
        android:text="@string/Bio_Desc"
        android:textSize="@dimen/desc_label_size"
        android:textAlignment="gravity"
        />

</LinearLayout>
